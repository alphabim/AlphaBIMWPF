    </ResourceDictionary.MergedDictionaries>

    <Style
        TargetType="{x:Type Button}"
        BasedOn="{StaticResource MaterialDesignRaisedAccentButton}"
        x:Key="ButtonStyle">

        <Setter
            Property="Margin"
            Value="3" />
        <Setter
            Property="Width"
            Value="100" />
        <Setter
            Property="Height"
            Value="33" />

        <!--<Setter
