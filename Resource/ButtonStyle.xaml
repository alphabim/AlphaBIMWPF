        <Setter
            Property="Background"
            Value="#065FD4" />

        <Setter
            Property="Foreground"
            Value="#FFFFFF" />


        <Setter
            Property="FontWeight"
            Value="Bold" />

        <Setter
            Property="materialDesign:ButtonAssist.CornerRadius"
            Value="3" />



    </Style>





